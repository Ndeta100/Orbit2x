									<div class="space-y-6">
										<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
											<h3 class="text-lg font-bold text-black mb-4">HEX Color Input</h3>

											<form id="hex-form" hx-post="/color/convert" hx-target="#results" hx-indicator=".loading">
												<input type="hidden" name="from" value="hex"/>
												<input
													type="text"
													name="color"
													placeholder="Enter HEX color (e.g., #3366ff)"
													class="w-full p-4 glassmorphic bg-white/60 border border-gray-200/50 rounded-xl text-black placeholder-black/50 focus:outline-none focus:ring-2 focus:ring-black/20 font-mono text-lg mb-4"
													required
												/>
												<div class="text-sm text-black/60 mb-4">
													<strong>Format Help:</strong> HEX format: #RGB, #RGBA, #RRGGBB, or #RRGGBBAA
												</div>
												<button type="submit" class="w-full bg-black text-white px-6 py-3 rounded-xl font-medium hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
													<span class="flex items-center justify-center">
														<svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
															<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"></path>
														</svg>
														Convert Color
													</span>
												</button>
											</form>
										</div>
									</div>

									<!-- Preview Section -->
									<div class="space-y-6">
										<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
											<h3 class="text-lg font-bold text-black mb-4">Color Preview</h3>
											<div id="hex-preview" class="h-32 glassmorphic bg-white/60 border border-gray-200/50 rounded-xl overflow-hidden">
												<div class="flex items-center justify-center h-full text-black/40">
													<div class="text-center">
														<svg class="h-12 w-12 mx-auto mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
															<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"></path>
														</svg>
														<p>Color preview will appear here</p>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<!-- RGB Tab -->
							<div id="rgb-tab" class="tab-content hidden">
								<div class="grid lg:grid-cols-2 gap-8">
									<!-- Input Section -->
									<div class="space-y-6">
										<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
											<h3 class="text-lg font-bold text-black mb-4">RGB Color Input</h3>

											<form id="rgb-form" hx-post="/color/convert" hx-target="#results" hx-indicator=".loading">
												<input type="hidden" name="from" value="rgb"/>
												<input
													type="text"
													name="color"
													placeholder="Enter RGB color (e.g., rgb(51, 102, 255))"
													class="w-full p-4 glassmorphic bg-white/60 border border-gray-200/50 rounded-xl text-black placeholder-black/50 focus:outline-none focus:ring-2 focus:ring-black/20 font-mono text-lg mb-4"
													required
												/>
												<div class="text-sm text-black/60 mb-4">
													<strong>Format Help:</strong> RGB format: rgb(r, g, b) or rgba(r, g, b, a) where r,g,b are 0-255 and a is 0-1
												</div>
												<button type="submit" class="w-full bg-black text-white px-6 py-3 rounded-xl font-medium hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
													<span class="flex items-center justify-center">
														<svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
															<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"></path>
														</svg>
														Convert Color
													</span>
												</button>
											</form>
										</div>
									</div>

									<!-- Preview Section -->
									<div class="space-y-6">
										<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
											<h3 class="text-lg font-bold text-black mb-4">Color Preview</h3>
											<div id="rgb-preview" class="h-32 glassmorphic bg-white/60 border border-gray-200/50 rounded-xl overflow-hidden">
												<div class="flex items-center justify-center h-full text-black/40">
													<div class="text-center">
														<svg class="h-12 w-12 mx-auto mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
															<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"></path>
														</svg>
														<p>Color preview will appear here</p>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<!-- HSL Tab -->
							<div id="hsl-tab" class="tab-content hidden">
								<div class="grid lg:grid-cols-2 gap-8">
									<!-- Input Section -->
									<div class="space-y-6">
										<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
											<h3 class="text-lg font-bold text-black mb-4">HSL Color Input</h3>

											<form id="hsl-form" hx-post="/color/convert" hx-target="#results" hx-indicator=".loading">
												<input type="hidden" name="from" value="hsl"/>
												<input
													type="text"
													name="color"
													placeholder="Enter HSL color (e.g., hsl(220, 100%, 60%))"
													class="w-full p-4 glassmorphic bg-white/60 border border-gray-200/50 rounded-xl text-black placeholder-black/50 focus:outline-none focus:ring-2 focus:ring-black/20 font-mono text-lg mb-4"
													required
												/>
												<div class="text-sm text-black/60 mb-4">
													<strong>Format Help:</strong> HSL format: hsl(h, s%, l%) or hsla(h, s%, l%, a) where h is 0-360, s,l are 0-100%, and a is 0-1
												</div>
												<button type="submit" class="w-full bg-black text-white px-6 py-3 rounded-xl font-medium hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
													<span class="flex items-center justify-center">
														<svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
															<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"></path>
														</svg>
														Convert Color
													</span>
												</button>
											</form>
										</div>
									</div>

									<!-- Preview Section -->
									<div class="space-y-6">
										<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
											<h3 class="text-lg font-bold text-black mb-4">Color Preview</h3>
											<div id="hsl-preview" class="h-32 glassmorphic bg-white/60 border border-gray-200/50 rounded-xl overflow-hidden">
												<div class="flex items-center justify-center h-full text-black/40">
													<div class="text-center">
														<svg class="h-12 w-12 mx-auto mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
															<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"></path>
														</svg>
														<p>Color preview will appear here</p>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Random Color & Popular Colors Section -->
						<div class="mt-8 grid md:grid-cols-2 gap-6">
							<!-- Random Color -->
							<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
								<h3 class="text-lg font-bold text-black mb-4">Random Color</h3>
								<button
									class="w-full bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-xl font-medium transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
									hx-get="/color/random"
									hx-target="#results"
									hx-indicator=".loading"
								>
									<span class="flex items-center justify-center">
										<svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
										</svg>
										Generate Random Color
									</span>
								</button>
							</div>

							<!-- Popular Colors -->
							<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
								<h3 class="text-lg font-bold text-black mb-4">Popular Colors</h3>
								<div class="grid grid-cols-6 gap-2">
									<div class="w-12 h-12 bg-red-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Red" onclick="setColor('#ff0000')"></div>
									<div class="w-12 h-12 bg-green-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Green" onclick="setColor('#00ff00')"></div>
									<div class="w-12 h-12 bg-blue-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Blue" onclick="setColor('#0000ff')"></div>
									<div class="w-12 h-12 bg-yellow-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Yellow" onclick="setColor('#ffff00')"></div>
									<div class="w-12 h-12 bg-purple-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Purple" onclick="setColor('#8000ff')"></div>
									<div class="w-12 h-12 bg-cyan-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Cyan" onclick="setColor('#00ffff')"></div>
									<div class="w-12 h-12 bg-black rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Black" onclick="setColor('#000000')"></div>
									<div class="w-12 h-12 bg-white rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-gray-300 shadow-lg" title="White" onclick="setColor('#ffffff')"></div>
									<div class="w-12 h-12 bg-orange-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Orange" onclick="setColor('#ff8000')"></div>
									<div class="w-12 h-12 bg-pink-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Pink" onclick="setColor('#ff00ff')"></div>
									<div class="w-12 h-12 bg-gray-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Gray" onclick="setColor('#808080')"></div>
									<div class="w-12 h-12 bg-teal-500 rounded-lg cursor-pointer hover:scale-110 transition-transform duration-200 border-2 border-white shadow-lg" title="Teal" onclick="setColor('#008080')"></div>
								</div>
							</div>
						</div>

						<!-- Loading State -->
						<div class="loading hidden items-center justify-center py-8">
							<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
								<div class="flex items-center space-x-3">
									<div class="loading-spinner w-6 h-6 border-2 border-black/20 border-t-black rounded-full"></div>
									<span class="text-black font-medium">Converting color...</span>
								</div>
							</div>
						</div>

						<!-- Results Section -->
						<div id="results" class="mt-8">
							<!-- Results will be loaded here -->
						</div>
					</div>
				</div>

				<!-- Features Section -->
				<div class="mt-16 max-w-4xl mx-auto">
					<div class="glassmorphic bg-white/40 rounded-2xl border border-gray-200/50 p-8 shadow-xl">
						<h2 class="text-2xl font-bold text-black mb-6 text-center">Color Conversion Features</h2>
						<div class="grid md:grid-cols-3 gap-6">
							<div class="text-center">
								<div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center mb-4 mx-auto shadow-lg">
									<svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"></path>
									</svg>
								</div>
								<h3 class="font-bold text-black mb-2">Multiple Formats</h3>
								<p class="text-black/70 text-sm">HEX, RGB, and HSL support</p>
							</div>
							<div class="text-center">
								<div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center mb-4 mx-auto shadow-lg">
									<svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
									</svg>
								</div>
								<h3 class="font-bold text-black mb-2">Live Preview</h3>
								<p class="text-black/70 text-sm">See colors in real-time</p>
							</div>
							<div class="text-center">
								<div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center mb-4 mx-auto shadow-lg">
									<svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
									</svg>
								</div>
								<h3 class="font-bold text-black mb-2">Copy Ready</h3>
								<p class="text-black/70 text-sm">CSS-ready color values</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			@components.CopyToClipboardScript()
			@components.SwitchTabsScript()
			<script>
				function setColor(color) {
					// Get the active tab and set the color in its input
					const activeTab = document.querySelector('.tab-content.active');
					const input = activeTab.querySelector('input[name="color"]');
					const form = activeTab.querySelector('form');

					if (input && form) {
						input.value = color;
						form.requestSubmit();
					}
				}
			</script>
		</body>
	</html>
}

templ Results(result ConversionResult) {
	<div class="space-y-6">
		if result.Error != "" {
			<div class="glassmorphic bg-red-50/80 border border-red-200/50 rounded-2xl p-6 shadow-xl">
				<div class="flex items-start space-x-3">
					<div class="w-8 h-8 bg-red-500 rounded-xl flex items-center justify-center flex-shrink-0">
						<svg class="h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
					</div>
					<div>
						<h4 class="font-bold text-red-800 mb-2">Color Conversion Error</h4>
						<p class="text-red-700 font-mono text-sm">{ result.Error }</p>
					</div>
				</div>
			</div>
		} else {
			<!-- Color Preview -->
			<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
				<h4 class="font-bold text-black mb-4">Color Preview</h4>
				<div class="h-32 rounded-xl border border-gray-200/50 shadow-inner overflow-hidden" style={ "background-color: " + result.PreviewColor }></div>
			</div>

			<!-- Color Values -->
			<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
				<h4 class="font-bold text-black mb-4">Color Values</h4>
				<div class="grid md:grid-cols-3 gap-4">
					<div class="glassmorphic bg-white/40 rounded-xl p-4 border border-gray-200/50">
						<div class="flex items-center justify-between mb-2">
							<span class="text-sm font-medium text-black/70">HEX</span>
							@components.CopyButton(result.HexColor, "Copy")
						</div>
						<div class="font-mono text-black">{ result.HexColor }</div>
					</div>
					<div class="glassmorphic bg-white/40 rounded-xl p-4 border border-gray-200/50">
						<div class="flex items-center justify-between mb-2">
							<span class="text-sm font-medium text-black/70">RGB</span>
							@components.CopyButton(result.RGBColor, "Copy")
						</div>
						<div class="font-mono text-black">{ result.RGBColor }</div>
					</div>
					<div class="glassmorphic bg-white/40 rounded-xl p-4 border border-gray-200/50">
						<div class="flex items-center justify-between mb-2">
							<span class="text-sm font-medium text-black/70">HSL</span>
							@components.CopyButton(result.HSLColor, "Copy")
						</div>
						<div class="font-mono text-black">{ result.HSLColor }</div>
					</div>
				</div>
			</div>

			<!-- CSS Examples -->
			<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
				<div class="flex items-center justify-between mb-4">
					<h4 class="font-bold text-black">CSS Examples</h4>
					@components.CopyButton("color: " + result.HexColor + ";\nbackground-color: " + result.HexColor + ";\nborder-color: " + result.HexColor + ";", "Copy All CSS")
				</div>
				<div class="glassmorphic bg-white/60 border border-gray-200/50 rounded-xl p-4 font-mono text-sm text-black space-y-2">
					<div><strong>Color:</strong> color: { result.HexColor };</div>
					<div><strong>Background:</strong> background-color: { result.HexColor };</div>
					<div><strong>Border:</strong> border-color: { result.HexColor };</div>
					<div><strong>RGB:</strong> color: { result.RGBColor };</div>
					<div><strong>HSL:</strong> color: { result.HSLColor };</div>
				</div>
			</div>

			<!-- Color Table -->
			<div class="glassmorphic bg-white/60 rounded-2xl border border-gray-200/50 p-6 shadow-xl">
				<h4 class="font-bold text-black mb-4">Color Format Table</h4>
				<div class="overflow-x-auto">
					<table class="w-full">
						<thead>
							<tr class="border-b border-gray-200/50">
								<th class="text-left py-3 px-4 font-bold text-black">Format</th>
								<th class="text-left py-3 px-4 font-bold text-black">Value</th>
								<th class="text-center py-3 px-4 font-bold text-black">Copy</th>
							</tr>
						</thead>
						<tbody>
							<tr class="border-b border-gray-100/50">
								<td class="py-3 px-4 font-medium text-black">HEX</td>
								<td class="py-3 px-4 font-mono text-black">{ result.HexColor }</td>
								<td class="py-3 px-4 text-center">
									@components.CopyButton(result.HexColor, "Copy")
								</td>
							</tr>
							<tr class="border-b border-gray-100/50">
								<td class="py-3 px-4 font-medium text-black">RGB</td>
								<td class="py-3 px-4 font-mono text-black">{ result.RGBColor }</td>
								<td class="py-3 px-4 text-center">
									@components.CopyButton(result.RGBColor, "Copy")
								</td>
							</tr>
							<tr>
								<td class="py-3 px-4 font-medium text-black">HSL</td>
								<td class="py-3 px-4 font-mono text-black">{ result.HSLColor }</td>
								<td class="py-3 px-4 text-center">
									@components.CopyButton(result.HSLColor, "Copy")
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		}
	</div>
}