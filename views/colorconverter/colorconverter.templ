						<!-- Format Selector Tabs -->
						@components.SwitchTabs("format-tabs", []components.TabItem{
							{ID: "hex-tab", Label: "HEX", Icon: "M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 21a4 4 0 004-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4", Active: true},
							{ID: "rgb-tab", Label: "RGB", Icon: "M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 21a4 4 0 004-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"},
							{ID: "hsl-tab", Label: "HSL", Icon: "M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 21a4 4 0 004-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4"},
						})

						<!-- Tab Contents -->
						<div class="tab-contents mt-8">
