					</div>
					<div>
						<div class="text-3xl md:text-4xl font-bold text-black mb-2">100%</div>
						<div class="text-black/70 font-medium">Free Forever</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}

templ CTASection() {
	<section class="bg-white py-20 relative overflow-hidden">
		<!-- Glass background elements -->
		<div class="absolute inset-0 bg-gradient-to-br from-gray-50/30 via-white to-gray-50/30"></div>
		<div class="absolute top-10 left-1/3 w-96 h-96 bg-gray-100/20 rounded-full blur-3xl"></div>
		<div class="absolute bottom-10 right-1/3 w-72 h-72 bg-gray-200/20 rounded-full blur-3xl"></div>

		<div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
			<div class="backdrop-blur-xl bg-white/40 rounded-3xl border border-gray-200/50 p-16 shadow-2xl max-w-5xl mx-auto">
				<h2 class="text-3xl md:text-5xl font-extrabold text-black mb-6">
					Ready to boost your productivity?
				</h2>
				<p class="text-xl md:text-2xl text-black/70 mb-10 max-w-3xl mx-auto">
					Join thousands of professionals who use Orbit2x daily. Start exploring our complete toolkit now.
				</p>
				<div class="flex flex-col sm:flex-row justify-center gap-4">
					<a href="#categories" class="inline-flex items-center justify-center px-10 py-4 border border-transparent text-lg font-bold rounded-2xl text-white bg-black hover:bg-gray-800 shadow-lg transition-all duration-300 hover:shadow-xl transform hover:scale-105">
						Start Exploring
					</a>
					<a href="/about" class="inline-flex items-center justify-center px-10 py-4 border border-transparent text-lg font-bold rounded-2xl text-black backdrop-blur-xl bg-white/60 hover:bg-white/80 border border-gray-200/50 shadow-lg transition-all duration-300 hover:shadow-xl transform hover:scale-105">
						Learn More
					</a>
				</div>
			</div>
		</div>
	</section>
}